@model HospitalManagement.Models.ViewModels.DoctorPayrollViewModel
@{
    ViewData["Title"] = "Thêm bảng lương bác sĩ";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="DoctorId">Bác sĩ</label>
        <input asp-for="DoctorId" class="form-control" hidden/>
        <input asp-for="DoctorName" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label>Tháng</label>
        <input asp-for="Month" class="form-control" />
    </div>
    <div class="form-group">
        <label>Năm</label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-group"></div>
        <label>Tổng số cuộc hẹn thành công</label>
        <input asp-for="TotalAppointments" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label>Lương cơ bản</label>
        <input asp-for="BaseSalary" class="form-control" />
    </div>
    <div class="form-group">
        <label>Thưởng</label>
        <input asp-for="Bonus" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ghi chú</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const errorMessage = `@Html.Raw(@TempData["ErrorMessage"]?.ToString().Replace("`", "\\`"))`;;
            if (errorMessage) {
                Swal.fire({
                    icon: 'error',
                    title: 'Không thể tạo bảng lương',
                    text: errorMessage,
                    confirmButtonColor: '#dc3545'
                });
            }
        });
    </script>
}
