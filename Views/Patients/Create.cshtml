@model HospitalManagement.Models.ViewModels.PatientViewModel

@{
    ViewData["Title"] = "Thêm bệnh nhân mới";
}
<head>
    <link href="~/css/Patients/create.css" rel="stylesheet" />
</head>
<div class="container-lg my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h2>Thêm bệnh nhân mới</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label fw-bold">Họ</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label fw-bold">Tên</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label fw-bold">Ngày sinh</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Gender" class="form-label fw-bold">Giới tính</label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">-- Chọn --</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmergencyContactName" class="form-label fw-bold">Tên liên hệ khẩn cấp</label>
                    <input asp-for="EmergencyContactName" class="form-control" />
                    <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmergencyContactPhone" class="form-label fw-bold">Số điện thoại khẩn cấp</label>
                    <input asp-for="EmergencyContactPhone" class="form-control" />
                    <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BloodGroup" class="form-label fw-bold">Nhóm máu</label>
                    <input asp-for="BloodGroup" class="form-control" />
                    <span asp-validation-for="BloodGroup" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="HasInsurance" class="form-check-input" type="checkbox" />
                    <label asp-for="HasInsurance" class="form-check-label">Có bảo hiểm</label>
                </div>

                <div class="mb-3">
                    <label asp-for="InsuranceProvider" class="form-label fw-bold">Nhà cung cấp bảo hiểm</label>
                    <input asp-for="InsuranceProvider" class="form-control" />
                    <span asp-validation-for="InsuranceProvider" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="InsurancePolicyNumber" class="form-label fw-bold">Số hợp đồng bảo hiểm</label>
                    <input asp-for="InsurancePolicyNumber" class="form-control" />
                    <span asp-validation-for="InsurancePolicyNumber" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
