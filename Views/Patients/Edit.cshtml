@model HospitalManagement.Models.ViewModels.PatientViewModel

@{
    ViewData["Title"] = "Sửa thông tin bệnh nhân";
}

<head>
    <link href="~/css/Patients/edit.css" rel="stylesheet" />
</head>

<div class="container-lg my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h2>Sửa thông tin bệnh nhân</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="FirstName" class="form-label">Họ</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="form-label">Tên</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateOfBirth" class="form-label">Ngày sinh</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender" class="form-label">Giới tính</label>
                    <select asp-for="Gender" class="form-select">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="form-label">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmergencyContactName" class="form-label">Tên liên hệ khẩn cấp</label>
                    <input asp-for="EmergencyContactName" class="form-control" />
                    <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmergencyContactPhone" class="form-label">Số điện thoại khẩn cấp</label>
                    <input asp-for="EmergencyContactPhone" class="form-control" />
                    <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BloodGroup" class="form-label">Nhóm máu</label>
                    <input asp-for="BloodGroup" class="form-control" />
                    <span asp-validation-for="BloodGroup" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="HasInsurance" class="form-check-input" />
                    <label asp-for="HasInsurance" class="form-check-label">Có bảo hiểm</label>
                    <span asp-validation-for="HasInsurance" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InsuranceProvider" class="form-label">Nhà cung cấp bảo hiểm</label>
                    <input asp-for="InsuranceProvider" class="form-control" />
                    <span asp-validation-for="InsuranceProvider" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InsurancePolicyNumber" class="form-label">Số hợp đồng bảo hiểm</label>
                    <input asp-for="InsurancePolicyNumber" class="form-control" />
                    <span asp-validation-for="InsurancePolicyNumber" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
