@model HospitalManagement.Models.ViewModels.DepartmentViewModels
@{
    ViewData["Title"] = "Thêm phòng ban";
}

<head>
    <link href="~/css/Departments/create.css" rel="stylesheet" />
</head>

<div class="container-lg my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-header">
            Thêm phòng ban mới
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Tên phòng ban</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên phòng ban" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Thêm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
