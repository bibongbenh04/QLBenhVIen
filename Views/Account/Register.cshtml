@model HospitalManagement.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<head>
    <link href="~/css/Account/register.css" rel="stylesheet" />
</head>

<div class="container-lg my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form id="registerForm" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" autocomplete="given-name" aria-required="true" />
                                    <label asp-for="FirstName">First Name</label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" autocomplete="family-name" aria-required="true" />
                                    <label asp-for="LastName">Last Name</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" />
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Roles">Chọn vai trò:</label>
                            @foreach (var role in ViewBag.AllRoles as List<string>)
                            {
                                <div class="form-check">
                                    <input type="checkbox" name="Roles" value="@role" class="form-check-input" />
                                    <label class="form-check-label">@role</label>
                                </div>
                            }
                        </div>


                        <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Register</button>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <p>
                            <a asp-action="Login">Already have an account? Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
