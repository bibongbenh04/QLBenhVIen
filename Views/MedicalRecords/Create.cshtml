@model HospitalManagement.Models.ViewModels.MedicalRecordCreateViewModel

@{
    ViewData["Title"] = "Tạo hồ sơ bệnh án";
}

<head>
    <link href="~/css/MedicalRecords/create.css" rel="stylesheet" />
</head>

<div class="container-lg my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header">
            <h2>Tạo hồ sơ bệnh án</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <!-- Patient Info (Read-Only) -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Bệnh nhân</label>
                    <input asp-for="PatientName" class="form-control" readonly />
                    <input asp-for="PatientId" type="hidden" />
                    <input asp-for="AppointmentId" type="hidden" />
                </div>

                <!-- Diagnosis -->
                <div class="mb-3">
                    <label asp-for="Diagnosis" class="form-label fw-bold">Chẩn đoán</label>
                    <textarea asp-for="Diagnosis" class="form-control" rows="4" placeholder="Nhập chẩn đoán"></textarea>
                    <span asp-validation-for="Diagnosis" class="text-danger"></span>
                </div>

                <!-- Treatment -->
                <div class="mb-3">
                    <label asp-for="Treatment" class="form-label fw-bold">Phác đồ điều trị</label>
                    <textarea asp-for="Treatment" class="form-control" rows="4" placeholder="Nhập phác đồ điều trị"></textarea>
                    <span asp-validation-for="Treatment" class="text-danger"></span>
                </div>

                <!-- Notes -->
                <div class="mb-3">
                    <label asp-for="Notes" class="form-label fw-bold">Ghi chú</label>
                    <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Nhập ghi chú (tuỳ chọn)"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Lưu hồ sơ</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
